generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id        String @id @default(uuid())
  title     String
  bannerUrl String

  // referencia automatica do relacionamento
  ads Ad[]
}

model Ad {
  id              String   @id @default(uuid())
  gameId          String
  nickName        String
  yearsPlaying    Int
  discord         String
  weekDays        String
  hourStart       Int
  hourEnd         Int
  useVoiceChannel Boolean
  createdAt       DateTime @default(now()) //definir valor padrão na criação

  // relacionando todo anuncio em um jogo -> game Game
  game Game @relation(fields: [gameId], references: [id])
}
